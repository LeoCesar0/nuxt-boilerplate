{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": ["./.nuxt/tsconfig.json", "./.nuxt/tsconfig.server.json"],
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"]
    },
    "types": ["@nuxt/types", "@nuxt/typescript-build", "@types/node"]
  },
  "exclude": ["node_modules"],
  "include": [
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.vue"
	]
}
